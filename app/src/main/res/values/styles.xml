<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ALKATIP">
        <item name="typeface">ALKATIP.TTF</item>
    </style>
    <style name="headertitle">
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/headertitle</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="maintypeicons">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="maintypepic">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="maintypetexts">
        <item name="android:textSize">12dp</item>
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:textColor">@color/tabtextcolor</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="listitem">
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="recycleritem">
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="listitemimage">
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="recyclerimage">
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="listitemtext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:textColor">@color/tabtextcolor</item>
    </style>
    <style name="recyclertext">
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/tabtextcolor</item>
    </style>
    <style name="recyclerprice">
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/red_hint</item>
    </style>
    <style name="SearchEdit">
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:textSize">13dp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:background">@drawable/bg_inputblank</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@color/textdark</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:hint"></item>
    </style>
    <!-- footer style -->
    <style name="tabicons">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="tabtexts">
        <item name="android:textSize">13dp</item>
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:textColor">@color/tabtextcolor</item>
    </style>
    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Updatingâ€¦</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!-- setting styles -->
    <style name="SettingButtonStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_setting_item</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="SubmitButtonStyle">
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/reglog</item>
        <item name="android:textColor">@color/textcolor</item>
    </style>
    <style name="SettingItemStyle">
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/settingitemcolor</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="SettingValueStyle">
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    <style name="SettingIconStyle">
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">22dp</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="SettingHaveNew">
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>
    <style name="HeaderAdd">
        <item name="android:layout_width">39dp</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="HeaderTitle">
        <item name="typeface">ALKATIP.TTF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:color">@color/textcolor</item>
    </style>
</resources>
