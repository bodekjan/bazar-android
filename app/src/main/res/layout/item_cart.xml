<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_cart"
    android:gravity="center_vertical">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_marginLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <np.TextView
            style="@style/ALKATIP"
            android:id="@+id/carditemname"
            android:textColor="@color/gray"
            android:layout_alignParentTop="true"
            android:textSize="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <np.TextView
            style="@style/ALKATIP"
            android:id="@+id/cardmycount"
            android:textSize="12dp"
            android:textColor="@color/fbutton_color_alizarin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignLeft="@+id/carditemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <np.TextView
            style="@style/ALKATIP"
            android:id="@+id/carditemprice"
            android:textColor="@color/gray"
            android:textSize="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@+id/carditemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <np.TextView
            style="@style/ALKATIP"
            android:id="@+id/carditemcount"
            android:textColor="@color/gray"
            android:textSize="12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@+id/carditemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/cartpic"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_width="80dp"
        android:layout_height="60dp" />
    <com.mikepenz.iconics.view.IconicsImageView
        style="@style/tabicons"
        android:id="@+id/cartlistbtn"
        android:layout_marginRight="6dp"
        app:iiv_color="@android:color/darker_gray"
        app:iiv_icon="gmi-minus-circle" />


</LinearLayout>